<div class="peelbackhotspot-inner component-inner {{#if _reveal._isInfoBoxAriaOnly}}aria-only{{/if}}" role="region" aria-label="{{_accessibility._ariaRegions.peelBackHotspot}}">
    {{> component this}}
    <div class="peelbackhitspot-widget component-widget">
        <div class="peelbackhotspot-imageboard">
        	<img class="peelbackhotspot-foreground" src="{{ _reveal._foreground }}">
            <div id="peelbackhotspot-track">
                {{#if _reveal._button._img }}
                <button style="background-image: url({{_reveal._button._img}})" tabindex="0" aria-label="Click me to reveal text" class="peelbackhotspot-button base"></button>
                {{else}}
                <button class="peelbackhotspot-button base {{#if _reveal._button._isVertical}}peelbackhotspot-button-vertical{{/if}}">{{ _reveal._button.textLeft }}</button>
                {{/if}}
            </div>
        	<div class="peelbackhotspot-overlaycontainer">
        		<div class="peelbackhotspot-hider">
        			<img class="peelbackhotspot-background" src="{{ _reveal._background }}">
                    {{#if _items}}
                    <div class="peelbackhotspot-hotspots">
                    {{#each _items}}
                        <button tabindex="-1" class="peelbackhotspot-hotspot {{_classes}} {{#if _isVisited}}visited{{/if}}" data-id="{{@index}}" style="top:{{{_top}}}%; left:{{{_left}}}%;" role="button" aria-label="{{pinAlt}}"><div class="icon icon-plus"></div></button>
                        <div class="peelbackhotspot-infobox" id="item-{{@index}}" data-id="{{@index}}"></div>
                    {{/each}}
                    </div>
                    {{/if}}
        		</div>
        	</div>
        	
        </div>
    </div>
</div>
